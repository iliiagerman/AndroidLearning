<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Lesons20_40.UserInterface.TextViewOnClickActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OnClickMeee"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="55dp"
        android:textStyle="bold"
        android:id="@+id/textView1"
        android:onClick="onClick"
        android:clickable="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AndMeee"
        android:gravity="center"
        android:textSize="55dp"
        android:textStyle="normal"
        android:id="@+id/textView2"
        android:background="@color/purple_200"
        android:onClick="onClick"
        android:clickable="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Бой с тенью"
        android:textSize="50sp"
        android:textStyle="bold"
        android:shadowColor="#ff0000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="30dp"
        android:background="@color/purple_200"
        android:autoLink="phone"
        android:linksClickable="true"
        android:text="Мой телефон: 0500505050" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:autoLink="web"
        android:linksClickable="true"
        android:text="Мой адрес: https://www.youtube.com/watch?v=5qap5aO4i9A"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выдели слово НИКО для проверки"
        android:textIsSelectable="true"
        android:textSize="26sp"
        android:background="@color/purple_200"/>
</LinearLayout>